<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/rectangle_gradient">

    <View
        android:id="@+id/gray_rec"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:background="@drawable/rec_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>


    <ImageView
        android:id="@+id/scan_img"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:src="@drawable/scan_img"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLOC Updation"
            android:layout_marginLeft="90dp"
            android:textSize="20sp"
            android:textColor="#444242"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#D9D9D9"
           android:layout_marginTop="5dp"
           android:layout_marginRight="90dp"
           android:layout_marginLeft="90dp"/>

        <Button
            android:id="@+id/btn_fromSloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:gravity="center_vertical"
            android:drawablePadding="20sp"
            android:backgroundTint="#048B3F"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/from_sloc"
            android:text="FROM SLOC" />

        <Button
            android:id="@+id/btn_toSloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="90dp"
            android:layout_marginTop="20sp"
            android:gravity="center_vertical"
            android:drawablePadding="20sp"
            android:textColor="@color/white"
            android:backgroundTint="#048B3F"
            android:textStyle="bold"
            android:layout_marginLeft="90dp"
            android:drawableLeft="@drawable/to_sloc"
            android:text="TO SLOC" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/illustrator" />

    </LinearLayout>


</RelativeLayout>